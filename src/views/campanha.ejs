<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Campanhas</h1>
      <p class="text-center lead">Campanhas disponiveis: </p>

      <%- include('includes/messages') %>

      
      <% if(campanha._id) { %>
        <form action="/contato/edit/<%= contato._id %>" method="POST">
        <% } else { %>
        <form action="/contato/register" method="POST">
        <% } %>
        <input type="hidden" name="_csrf" value=<%= csrfToken %>>

      <div class="form-check">
        <input value="<%= campanha.disponivel %>" class="form-check-input" type="radio" name="campanhaDisponivel">
        <label class="form-check-label" for="flexRadioDefault1">
          <table>
            <tr>
              <td> UBS JARDIM SAO BENTO</td>
              <td> RUA JOAO ROBALO, 64 </td> 
              <td> SAO BENTO - S√ÉO PAULO - SP </td>
              <td> 05881-000</td>
            </tr>
          </table>
        </label>
      </div>
      <div class="form-check">
        <input value="<%= campanha.endereco %>" class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>
        <label class="form-check-label" for="flexRadioDefault2">
          Default checked radio
        </label>
      </div>


      <% if(contato._id) { %>
      <form action="/contato/edit/<%= contato._id %>" method="POST">
      <% } else { %>
      <form action="/contato/register" method="POST">
      <% } %>
        <input type="hidden" name="_csrf" value=<%= csrfToken %>>

        <div class="form-group">
          <label>Nome</label>
          <input value="<%= contato.nome %>" type="text" class="form-control" name="nome">
        </div>
        <div class="form-group">
          <label>Sobrenome</label>
          <input value="<%= contato.sobrenome %>" type="text" class="form-control" name="sobrenome">
        </div>
        <div class="form-group">
          <label>Email</label>
          <input value="<%= contato.email %>" type="email" class="form-control" name="email">
        </div>
        <div class="form-group">
          <label>Telefone</label>
          <input value="<%= contato.telefone %>" type="tel" class="form-control" name="telefone">
        </div>
        <button type="submit" class="btn btn-primary">Salvar</button>
      </form>


    </div>
    
    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>